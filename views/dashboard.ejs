<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(function(user) { %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td>
                <a href="/edit-user/<%= user.id %>" onclick="return confirm('Are you sure?')">Edit</a>
                <a href="/delete/<%= user.id %>" onclick="return confirm('Are you sure?')">Delete</a>
                <a href="/details/<%=user.id%>">Details</a>
                <% if (user.UserGameBio == null) { %>
                    <a href="/add-biodata/<%=user.id%>">Add Bio</a>
                <% } %> 
                
            </td>
        </tr>
        <% }); %>
    </tbody>
</table>
</body>
</html>